# متغيرات البيئة (Environment Variables)
# انسخ هذا الملف واسمه .env.local وأضف قيمك الحقيقية

# Google OAuth (اختياري - للإنتاج)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here
NEXT_PUBLIC_GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# API Keys (إن وجدت)
NEXT_PUBLIC_API_FOOTBALL_KEY=your_api_football_key_here

# قاعدة البيانات (عند التبديل من localStorage)
DATABASE_URL=your_database_url_here
DATABASE_USER=your_db_user_here
DATABASE_PASSWORD=your_db_password_here

# JWT Secret (للجلسات الآمنة)
JWT_SECRET=your_jwt_secret_key_here

# URL الموقع
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# وضع التطوير
NODE_ENV=development
